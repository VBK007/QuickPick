<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#fec2"
    android:layout_height="300dp">

<LinearLayout
    android:layout_margin="5dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="130dp"
        android:layout_height="150dp"
        android:background="@color/fui_transparent"
        android:src="@drawable/p"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#000"
        android:layout_marginTop="50dp"
        android:text="Welcome back, Quick Pick"
        android:fontFamily="@font/arbutus"
        />





</LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="33dp"
                android:scaleType="fitXY"
                android:layout_height="33dp"
                android:drawableStart="@drawable/acc"
                />
            <TextView
                android:layout_margin="5dp"
                android:textSize="18sp"
                android:fontFamily="@font/antic"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:id="@+id/username"
                />




        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

       <LinearLayout
           android:layout_margin="3dp"
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="33dp"
               android:drawableStart="@drawable/fui_ic_mail_white_24dp"
               />
           <TextView
               android:layout_margin="5dp"
               android:textSize="18sp"
               android:fontFamily="@font/antic"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Email Adress"
               android:textColor="@color/white"
               android:id="@+id/email"
               />




       </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_margin="3dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:drawableStart="@drawable/fui_ic_phone_white_24dp"
                />
            <TextView
                android:layout_margin="5dp"
                android:textSize="18sp"
                android:fontFamily="@font/antic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8778471128"
                android:textColor="@color/white"
                android:id="@+id/phone"
                />


            <RelativeLayout
                android:layout_width="match_parent"
                android:visibility="invisible"
                android:id="@+id/invisible"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:id="@+id/start"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_baseline_star_24"
                    />

                <TextView
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@+id/start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   android:text="Rating"
                    android:id="@+id/rr"
                    android:textColor="@color/white"
                    android:fontFamily="@font/antic"
                    android:textStyle="bold"
                    android:textSize="18sp"

                    />
            </RelativeLayout>




        </LinearLayout>

    </LinearLayout>







</LinearLayout>